{
  "name": "campuspe-playwright-pdf-service",
  "version": "1.0.0",
  "description": "High-quality PDF generation service using Playwright",
  "main": "server-simple.js",
  "scripts": {
    "start": "node server-simple.js",
    "dev": "nodemon server-simple.js",
    "install-playwright": "npx playwright install --with-deps chromium",
    "docker-build": "docker build -t campuspe-pdf-service .",
    "docker-run": "docker run -p 3000:3000 campuspe-pdf-service"
  },
  "dependencies": {
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "playwright",
    "azure",
    "resume",
    "campuspe"
  ],
  "author": "CampusPe",
  "license": "MIT"
}
