<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Handle static files -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        <!-- Handle Next.js static files -->
        <rule name="NextStatic">
          <match url="^(_next\/static\/.*)$" />
          <action type="Rewrite" url="{R:1}" />
        </rule>
        <!-- Handle all other requests -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
            <add input="{REQUEST_URI}" pattern="^/public" negate="True"/>
            <add input="{REQUEST_URI}" pattern="^/_next" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    <iisnode 
      nodeProcessCommandLine="node"
      interceptor="iisnode/interceptor.js"
      watchedFiles="*.js;node_modules\*;routes\*.js;views\*.js"
      promoteServerVars="LOGON_USER,AUTH_USER,AUTH_TYPE"
      loggingEnabled="true"
      logDirectory="iisnode"
    />
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>
