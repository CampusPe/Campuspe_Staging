{
  "name": "campuspe-api",
  "version": "1.0.0",
  "description": "CampusPe API Server - Backend API for student-college-recruiter platform",
  "main": "dist/app.js",
  "scripts": {
    "start": "node server.js",
    "start:dev": "ts-node src/app.ts",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc --project tsconfig.build.json",
    "build:dev": "tsc",
    "build:prod": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf dist && npm run build:dev",
    "prebuild": "npm install",
    "postbuild": "echo 'API build completed successfully' && cp src/routes/*.js dist/routes/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@azure/communication-email": "^1.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chrome-aws-lambda": "^10.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "google-auth-library": "^10.2.1",
    "helmet": "^8.1.0",
    "html-pdf-node": "^1.0.8",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.1",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.2",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "api",
    "campus",
    "recruitment",
    "students",
    "colleges"
  ],
  "author": "CampusPe Team",
  "license": "PROPRIETARY"
}
