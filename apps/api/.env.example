# API Configuration
PORT=5001
HOST=localhost

# Database - Choose one:
# MongoDB Atlas (Production/Staging)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campuspe?retryWrites=true&w=majority&appName=CampuspeStaging

# Local MongoDB (Development)
# MONGODB_URI=mongodb://localhost:27017/campuspe

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Claude AI Configuration (for resume analysis and job matching)
CLAUDE_API_KEY=your_claude_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here

# 2Factor SMS Service (for Students)
TWOFACTOR_API_KEY=your-2fa-api-key-here

# Azure Communication Services (for Colleges & Recruiters)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-resource.communication.azure.com/;accesskey=your-key
AZURE_COMMUNICATION_EMAIL_FROM=noreply@yourdomain.com

# WhatsApp Business API (for messaging)
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token
