{
  "name": "campuspe-platform",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@9.6.7",
  "scripts": {
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build": "npm run build:api && npm run build:web",
    "start:api": "cd apps/api && npm start",
    "start:web": "cd apps/web && npm start",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "test:db": "node scripts/test-mongodb-connection.js",
    "setup": "npm install && cd apps/api && npm install && cd ../web && npm install"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "nodemailer": "^7.0.5",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.2"
  }
}
