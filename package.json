{
  "name": "campuspe-api",
  "version": "1.0.0",
  "description": "API for the CampusPe Platform connecting students, colleges, and recruiters",
  "main": "server.js",
  "private": true,
  "packageManager": "npm@9.6.7",
  "scripts": {
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" --kill-others-on-fail",
    "dev:fast": "concurrently \"npm run dev:api\" \"npm run dev:web\" --kill-others-on-fail --prefix-colors blue,green",
    "build:api": "cd apps/api && npm install && npm run build",
    "build:web": "cd apps/web && npm install && npm run build",
    "build": "tsc",
    "postbuild": "echo 'API build completed successfully'",
    "start:api": "cd apps/api && npm start",
    "start:web": "cd apps/web && npm start",
    "start": "node server.js",
    "test:db": "node scripts/test-mongodb-connection.js",
    "setup": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/dist",
    "fresh-install": "npm run clean && npm run setup"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@azure/communication-email": "^1.0.0",
    "@bunny.net/storage-sdk": "^0.3.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "html-pdf-node": "^1.0.8",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.1",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.2",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
